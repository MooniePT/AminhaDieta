<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.ui.controller.DashboardController">

    <left>
        <VBox spacing="15" styleClass="sidebar" prefWidth="250">
            <Label text="A Minha Dieta" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region prefHeight="20" />
            
            <Button fx:id="homeBtn" text="Dashboard" styleClass="button" maxWidth="Infinity" onAction="#onHome"/>
            <Button fx:id="mealsBtn" text="Refeições" styleClass="button" maxWidth="Infinity" onAction="#onMeals"/>
            <Button fx:id="hydrationBtn" text="Hidratação" styleClass="button" maxWidth="Infinity" onAction="#onHydration"/>
            <Button fx:id="historyBtn" text="Histórico" styleClass="button" maxWidth="Infinity" onAction="#onHistory"/>
            <Region VBox.vgrow="ALWAYS" />
            <Button text="Trocar Perfil" onAction="#onTrocarPerfil" styleClass="button, button-secondary" maxWidth="Infinity" />
            <padding><Insets bottom="20" /></padding>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
             <!-- Views will be loaded here -->
        </StackPane>
    </center>
</BorderPane>
