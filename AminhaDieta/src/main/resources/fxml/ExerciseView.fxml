<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="app.ui.controller.ExerciseController" spacing="10" styleClass="content-area">
    <Label text="Exercício Físico" styleClass="label-header"/>

    <VBox spacing="15" style="-fx-padding: 15;">
        <!-- Add Form -->
        <VBox spacing="10" styleClass="card">
            <Label text="Registar Atividade" styleClass="label-subheader"/>

            <HBox spacing="10">
                <ComboBox fx:id="typeCombo" promptText="Tipo de Atividade" prefWidth="200" editable="true"/>
                <TextField fx:id="durationField" promptText="Duração (min)" prefWidth="100"/>
                <TextField fx:id="caloriesField" promptText="Calorias (kcal)" prefWidth="100"/>
                <Button text="Adicionar" onAction="#onAddExercise" styleClass="button-action"/>
            </HBox>
            <Label fx:id="statusLabel" styleClass="label-error"/>
        </VBox>

        <!-- List -->
        <Label text="Atividades de Hoje" styleClass="label-subheader"/>
        <ListView fx:id="exerciseList" VBox.vgrow="ALWAYS"/>
    </VBox>
</VBox>
