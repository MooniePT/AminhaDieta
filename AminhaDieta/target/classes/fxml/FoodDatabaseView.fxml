<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="app.ui.controller.FoodDatabaseController" spacing="20" styleClass="content-area">
    <Label text="Gerir Alimentos" styleClass="label-header"/>
    
    <HBox spacing="15">
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Novo Alimento" styleClass="label-subheader"/>
            <TextField fx:id="nameField" promptText="Nome (ex: Arroz)"/>
            <TextField fx:id="calField" promptText="Kcal por 100g"/>
            <HBox spacing="10">
                 <TextField fx:id="protField" promptText="ProteÃ­na (g)" HBox.hgrow="ALWAYS"/>
                 <TextField fx:id="carbField" promptText="Carbo (g)" HBox.hgrow="ALWAYS"/>
                 <TextField fx:id="fatField" promptText="Gordura (g)" HBox.hgrow="ALWAYS"/>
            </HBox>
            <Button text="Adicionar Alimento" onAction="#onAddFood" styleClass="button-action"/>
            <Label fx:id="statusLabel" styleClass="label-error"/>
        </VBox>
        
        <VBox spacing="10" HBox.hgrow="ALWAYS">
             <Label text="Alimentos Guardados" styleClass="label-subheader"/>
             <ListView fx:id="foodList" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
</VBox>
