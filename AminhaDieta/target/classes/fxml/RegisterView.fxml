<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.ui.controller.RegisterController">

    <center>
        <StackPane style="-fx-background-color: #F4F6F8;">
             <VBox spacing="20" maxWidth="400" maxHeight="500" styleClass="card" alignment="CENTER">
                 <padding>
                     <Insets top="40" right="40" bottom="40" left="40"/>
                 </padding>

                 <Label fx:id="tituloLabel" text="Criar Perfil" styleClass="label-header" />
                 <Label text="Começa a tua jornada saudável hoje!" style="-fx-text-fill: #757575;" />

                 <VBox spacing="10" alignment="CENTER_LEFT">
                     <Label text="Género" style="-fx-font-weight: bold;"/>
                     <HBox spacing="20">
                         <RadioButton fx:id="masculinoRadio" text="Masculino" />
                         <RadioButton fx:id="femininoRadio" text="Feminino" />
                     </HBox>
                 </VBox>

                 <VBox spacing="10" alignment="CENTER_LEFT">
                     <Label text="Nome" style="-fx-font-weight: bold;"/>
                     <TextField fx:id="nomeField" promptText="Ex: Carlos" styleClass="text-field" />
                 </VBox>

                 <HBox spacing="10">
                     <VBox spacing="5" HBox.hgrow="ALWAYS">
                         <Label text="Idade" />
                         <TextField fx:id="idadeField" promptText="Anos" styleClass="text-field" />
                     </VBox>
                     <VBox spacing="5" HBox.hgrow="ALWAYS">
                         <Label text="Peso (kg)" />
                         <TextField fx:id="pesoField" promptText="kg" styleClass="text-field" />
                     </VBox>
                     <VBox spacing="5" HBox.hgrow="ALWAYS">
                         <Label text="Altura (cm)" />
                         <TextField fx:id="alturaField" promptText="cm" styleClass="text-field" />
                     </VBox>
                 </HBox>

                 <Region prefHeight="10" />

                 <HBox spacing="10" alignment="CENTER">
                     <Button fx:id="guardarBtn" text="Criar Perfil" onAction="#onGuardar" styleClass="button" prefWidth="150" />
                     <Button fx:id="cancelarBtn" text="Cancelar" onAction="#onCancelar" styleClass="button, button-secondary" visible="false" managed="false"/>
                 </HBox>

                 <Label fx:id="erroLabel" styleClass="label-error" wrapText="true" textAlignment="CENTER" />
             </VBox>
        </StackPane>
    </center>
</BorderPane>
